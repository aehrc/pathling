{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Pathling Server Helm Chart Values",
  "description": "Configuration values for deploying Pathling Server on Kubernetes",
  "type": "object",
  "properties": {
    "pathling": {
      "type": "object",
      "description": "Pathling server configuration",
      "properties": {
        "image": {
          "type": "string",
          "description": "Docker image for the Pathling server",
          "default": "ghcr.io/aehrc/pathling:latest"
        },
        "resources": {
          "type": "object",
          "description": "Resource requirements and limits for the server pod",
          "properties": {
            "requests": {
              "type": "object",
              "description": "Resource requests for scheduling",
              "properties": {
                "cpu": {
                  "type": ["string", "integer"],
                  "description": "CPU request (e.g., '2' or '500m')",
                  "default": 2
                },
                "memory": {
                  "type": "string",
                  "description": "Memory request (e.g., '4G' or '4096Mi')",
                  "default": "4G"
                }
              }
            },
            "limits": {
              "type": "object",
              "description": "Resource limits for the container",
              "properties": {
                "memory": {
                  "type": "string",
                  "description": "Memory limit (e.g., '4G' or '4096Mi')",
                  "default": "4G"
                }
              }
            },
            "maxHeapSize": {
              "type": "string",
              "description": "Maximum JVM heap size for the Pathling server",
              "default": "2800m"
            }
          }
        },
        "additionalJavaOptions": {
          "type": "string",
          "description": "Additional JVM options passed to the Pathling server",
          "default": "-Duser.timezone=UTC"
        },
        "deployment": {
          "type": "object",
          "description": "Kubernetes deployment configuration",
          "properties": {
            "strategy": {
              "type": "string",
              "description": "Deployment strategy (Recreate or RollingUpdate)",
              "enum": ["Recreate", "RollingUpdate"],
              "default": "Recreate"
            },
            "imagePullPolicy": {
              "type": "string",
              "description": "Image pull policy for the container",
              "enum": ["Always", "IfNotPresent", "Never"],
              "default": "Always"
            }
          }
        },
        "volumes": {
          "type": "array",
          "description": "Additional volumes to mount on the pod",
          "items": {
            "type": "object"
          },
          "default": []
        },
        "volumeMounts": {
          "type": "array",
          "description": "Volume mounts for the container",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the volume to mount"
              },
              "mountPath": {
                "type": "string",
                "description": "Path within the container to mount the volume"
              },
              "readOnly": {
                "type": "boolean",
                "description": "Whether to mount the volume as read-only"
              }
            },
            "required": ["name", "mountPath"]
          },
          "default": []
        },
        "serviceAccount": {
          "type": ["string", "null"],
          "description": "Service account name to use for the pod",
          "default": null
        },
        "imagePullSecrets": {
          "type": "array",
          "description": "Image pull secrets for accessing private container registries",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the image pull secret"
              }
            },
            "required": ["name"]
          },
          "default": []
        },
        "tolerations": {
          "type": "array",
          "description": "Tolerations for pod scheduling",
          "items": {
            "type": "object",
            "properties": {
              "key": {
                "type": "string",
                "description": "Toleration key"
              },
              "operator": {
                "type": "string",
                "description": "Toleration operator",
                "enum": ["Exists", "Equal"]
              },
              "value": {
                "type": "string",
                "description": "Toleration value"
              },
              "effect": {
                "type": "string",
                "description": "Toleration effect",
                "enum": ["NoSchedule", "PreferNoSchedule", "NoExecute"]
              },
              "tolerationSeconds": {
                "type": "integer",
                "description": "Toleration seconds for NoExecute effect"
              }
            }
          },
          "default": []
        },
        "affinity": {
          "type": ["object", "null"],
          "description": "Affinity rules for pod scheduling",
          "default": null
        },
        "securityContext": {
          "type": ["object", "null"],
          "description": "Security context for the pod",
          "properties": {
            "runAsUser": {
              "type": "integer",
              "description": "User ID to run the container as"
            },
            "runAsGroup": {
              "type": "integer",
              "description": "Group ID to run the container as"
            },
            "fsGroup": {
              "type": "integer",
              "description": "File system group ID for volume mounts"
            },
            "runAsNonRoot": {
              "type": "boolean",
              "description": "Require the container to run as non-root"
            }
          },
          "default": null
        },
        "config": {
          "type": "object",
          "description": "Pathling server configuration passed as environment variables. Keys should be Spring Boot property names.",
          "additionalProperties": {
            "type": ["string", "integer", "boolean", "null"]
          },
          "default": {}
        },
        "secretConfig": {
          "type": "object",
          "description": "Sensitive Pathling server configuration stored in a Kubernetes Secret. Keys should be Spring Boot property names.",
          "additionalProperties": {
            "type": ["string", "integer", "boolean", "null"]
          },
          "default": {}
        }
      }
    }
  }
}
