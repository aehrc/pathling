FROM alpine

LABEL copyright="Copyright Â© 2018-2023, Commonwealth Scientific and Industrial Research Organisation (CSIRO) ABN 41 687 119 230. Licensed under the Apache License, version 2.0." \
      author="John Grimes <John.Grimes@csiro.au>"

RUN apk --no-cache update && \
    apk --no-cache upgrade && \
    apk --no-cache add bash varnish~=7

COPY entrypoint.sh /

COPY default.vcl /etc/varnish/default.vcl

EXPOSE 80
CMD ["bash", "/entrypoint.sh"]
