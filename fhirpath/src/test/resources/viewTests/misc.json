{
  "title": "miscellaneous tests",
  "resources": [
    {
      "resourceType": "Patient",
      "id": "p1",
      "gender": "male",
      "name": [
        {
          "use": "official",
          "family": "f1",
          "given": [
            "g1.1",
            "g1.2"
          ]
        }
      ]
    },
    {
      "resourceType": "Patient",
      "id": "p2",
      "gender": "female",
      "name": [
        {
          "use": "nickname",
          "family": "f2",
          "given": [
            "g2.1",
            "g2.2"
          ]
        }
      ]
    }
  ],
  "tests": [
    {
      "title": "empty literal",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "column": [
              {
                "path": "id",
                "name": "id"
              },
              {
                "path": "{}",
                "name": "empty"
              }
            ]
          }
        ]
      },
      "expect": [
        {
          "id": "p1",
          "empty": null
        },
        {
          "id": "p2",
          "empty": null
        }
      ]
    },
    {
      "title": "traversal on array first()",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "column": [
              {
                "path": "id",
                "name": "id"
              },
              {
                "path": "name.first().family",
                "name": "given_name"
              }
            ]
          }
        ]
      },
      "expect": [
        {
          "id": "p1",
          "given_name": "f1"
        },
        {
          "id": "p2",
          "given_name": "f2"
        }
      ]
    }
  ]
}
