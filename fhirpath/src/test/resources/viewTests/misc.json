{
  "title": "miscellaneous tests",
  "resources": [
    {
      "resourceType": "Patient",
      "id": "p1",
      "gender": "male",
      "name": [
        {
          "use": "official",
          "family": "f1",
          "given": [
            "g1.1",
            "g1.2"
          ]
        }
      ]
    },
    {
      "resourceType": "Patient",
      "id": "p2",
      "gender": "female",
      "name": [
        {
          "use": "nickname",
          "family": "f2",
          "given": [
            "g2.1",
            "g2.2"
          ]
        }
      ]
    },
    {
      "resourceType": "Observation",
      "id": "o1",
      "component": [
        {
          "valueQuantity": {
            "value": 98.6,
            "unit": "F"
          }
        },
        {
          "valueQuantity": {
            "value": 37,
            "unit": "C"
          }
        }
      ]
    },
    {
      "resourceType": "Observation",
      "id": "o2",
      "component": [
        {
          "valueQuantity": {
            "value": 33.44,
            "unit": "C"
          }
        }
      ]
    },
    {
      "resourceType": "Observation",
      "id": "o3",
      "component": [
        {
          "valueString": "test"
        }
      ]
    }
  ],
  "tests": [
    {
      "title": "empty literal",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "column": [
              {
                "path": "id",
                "name": "id"
              },
              {
                "path": "{}",
                "name": "empty"
              }
            ]
          }
        ]
      },
      "expect": [
        {
          "id": "p1",
          "empty": null
        },
        {
          "id": "p2",
          "empty": null
        }
      ]
    },
    {
      "title": "traversal on array first()",
      "view": {
        "resource": "Patient",
        "select": [
          {
            "column": [
              {
                "path": "id",
                "name": "id"
              },
              {
                "path": "name.first().family",
                "name": "given_name"
              }
            ]
          }
        ]
      },
      "expect": [
        {
          "id": "p1",
          "given_name": "f1"
        },
        {
          "id": "p2",
          "given_name": "f2"
        }
      ]
    },
    {
      "title": "external value of array of Decimals",
      "view": {
        "resource": "Observation",
        "select": [
          {
            "column": [
              {
                "path": "id",
                "name": "id"
              },
              {
                "path": "component.value.ofType(Quantity).value",
                "name": "component_value", 
                "collection": true
              }
            ]
          }
        ]
      },
      "expect": [
        {
          "id": "o1",
          "component_value": ["98.6", "37" ]
        },
        {
          "id": "o2",
          "component_value": ["33.44"]
        },
        {
          "id": "o3",
          "component_value": []
        }
      ]
    }
  ]
}
